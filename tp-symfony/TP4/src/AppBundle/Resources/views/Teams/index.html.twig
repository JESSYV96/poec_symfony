{% extends "::base.html.twig" %}

{% block title %}Basketix - Liste des équipes
{% endblock title %}
{% block body %}

<div class="title2">
  <h2>Liste des équipes :</h2>
</div>

<a class="btn" href="{{ path('teams_add') }}">Ajouter une équipe</a>
<table class="table">
  <tr>
    <th>Logo</th>
    <th>Nom</th>
    <th>Ville</th>
    <th>Actions</th>
  </tr>
  {% for t in teams %}
    <tr>
        <td>{% if t.logo %}<img class="imgteam" src="{{asset('/img/team_logo/') ~ t.logo }}">{% endif %}</td>
        <td>{{ t.name }}</td>
        <td>{{ t.city }}</td>
        <td>
          <a class="btn" href="{{ path('teams_edit', {'id' : t.id}) }}">Modifier</a>
          <a class="btn" href="{{ path('teams_delete', {'id' : t.id}) }}">Supprimer</a>
        </td>
    </tr>
  {% endfor %}
</table>
{% endblock %}
